{% extends "_template.html.twig" %}

{% block title %}
    Accueil
{% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title">Accueil</h1>

        <div class="section">
            <h2 class="title">Catégories</h2>

            <div class="columns is-multiline">
                {% for category in category_list %}
                    <div class="column is-one-third">
                        <div class="box">
                            <a href="{{ path('product_category', {id: category.id}) }}" class="heading is-size-5 has-text-centered has-text-primary">
                                {{ category.name }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="section">
            <h2 class="title">Nouveautés</h2>

            {# inclusion de fichier & passage de variables #}
            {% include 'includes/product_list.html.twig' with {products: new_products} %}
        </div>
    </div>
{% endblock %}
